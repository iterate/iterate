{
  "name": "@iterate-com/events-service",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx entrypoint.ts",
    "start": "NODE_ENV=production tsx entrypoint.ts",
    "test": "vitest run",
    "test:subscriptions": "vitest run src/push-subscriptions.test.ts src/pull-subscriptions.test.ts src/subscriptions.pressure.test.ts",
    "test:subscriptions:bench": "vitest run --config vitest.benchmark.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx effect-stream-manager/services/stream-storage/migrate.ts",
    "lint": "eslint . --fix --max-warnings 0",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --ignore-path ../../.prettierignore --write .",
    "format:check": "prettier --ignore-path ../../.prettierignore --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "effect-language-service patch"
  },
  "dependencies": {
    "@effect/platform": "^0.94.2",
    "@effect/platform-node": "^0.104.1",
    "@hono/node-server": "^1.19.6",
    "@iterate-com/services-contracts": "workspace:*",
    "@orpc/client": "^1.13.5",
    "@orpc/contract": "^1.13.5",
    "@orpc/openapi": "1.13.5",
    "@orpc/server": "^1.13.5",
    "@orpc/zod": "1.13.5",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.44.5",
    "effect": "^3.19.15",
    "hono": "^4.11.3",
    "jsonata": "^2.1.0",
    "partysocket": "^1.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "vite": "^7.3.1",
    "ws": "^8.19.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@effect/language-service": "^0.71.1",
    "@effect/vitest": "^0.27.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.6",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.0.5"
  }
}
