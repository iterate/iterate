{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "noEmit": true
  },
  "include": ["*.ts", "integrations/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
