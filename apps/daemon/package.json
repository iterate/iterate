    "discord:dev": "tsx watch --clear-screen=false ./discord/index.ts",
    "discord:start": "./discord/start.sh",
    "build": "pnpm /build:/",
    "build:client": "doppler run -- vite build",
    "start": "tsx ./server.ts",
    "preview": "doppler run -- vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:studio": "drizzle-kit studio",
    "db:reset": "rm -f db.sqlite && drizzle-kit migrate",
