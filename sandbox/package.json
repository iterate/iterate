{
  "name": "@iterate-com/sandbox",
  "type": "module",
  "private": true,
  "exports": {
    "./providers/types": "./providers/types.ts",
    "./providers/machine-stub": "./providers/machine-stub.ts",
    "./providers/naming": "./providers/naming.ts",
    "./providers/docker/api": "./providers/docker/api.ts",
    "./providers/docker": "./providers/docker/provider.ts",
    "./providers/daytona/resolve-sandbox": "./providers/daytona/resolve-sandbox.ts",
    "./providers/daytona": "./providers/daytona/provider.ts",
    "./providers/fly": "./providers/fly/provider.ts"
  },
  "scripts": {
    "build": "SANDBOX_BUILD_PLATFORM=${SANDBOX_BUILD_PLATFORM:-linux/amd64,linux/arm64} tsx providers/docker/build-image.ts",
    "daytona:push": "doppler run -- sh -c 'tsx providers/daytona/push-snapshot.ts \"$@\"' --",
    "shell": "doppler run -- tsx providers/docker/shell.ts",
    "fly:bootstrap-apps": "doppler run -- sh -c 'tsx providers/fly/bootstrap-apps.ts \"$@\"' --",
    "fly:cleanup": "doppler run -- sh -c 'tsx providers/fly/cleanup-machines.ts \"$@\"' --",
    "test": "vitest run",
    "test:docker": "RUN_SANDBOX_TESTS=true SANDBOX_TEST_PROVIDER=docker pnpm test",
    "test:daytona": "doppler run -- sh -c 'RUN_SANDBOX_TESTS=true SANDBOX_TEST_PROVIDER=daytona pnpm test'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "pidnap": "workspace:*",
    "@daytonaio/sdk": "^0.128.1",
    "@trpc/client": "^11.1.4",
    "@trpc/server": "^11.1.4",
    "undici": "^7.10.0",
    "zod": "^3.25.30"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
