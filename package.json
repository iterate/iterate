{
  "name": "iterate-root",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r --parallel build",
    "typecheck": "pnpm -r --parallel typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "iterate": "pnpm run --silent os iterate",
    "os": "pnpm run --filter ./apps/os",
    "eval": "cd apps/os && doppler run -- pnpm evalite",
    "eval:light": "cd apps/os && doppler run -- env -u BRAINTRUST_API_KEY pnpm evalite",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "lint:inspect": "pnpx @eslint/config-inspector",
    "prepare": "cd apps/os && pnpm tsdown",
    "test": "pnpm -r --parallel test",
    "test:watch": "pnpm -r --parallel test:watch",
    "docker:up": "docker compose up -d postgres",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "db:migrate": "pnpm -r db:migrate",
    "db:generate": "pnpm -r db:generate",
    "db:studio": "pnpm -r --parallel db:studio",
    "db:studio:production": "PSCALE_DATABASE_URL=$(doppler secrets get --plain DRIZZLE_ADMIN_POSTGRES_CONNECTION_STRING) pnpm db:studio",
    "clean": "rm -rf ./**/node_modules",
    "vibe-rules": "vibe-rules install cursor && vibe-rules install codex && vibe-rules install claude-code",
    "super-reset": "pnpm i && pnpm docker:down && pnpm docker:clean && pnpm docker:up && sleep 3 && pnpm db:migrate && pnpm dev",
    "postinstall": "pnpm vibe-rules"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@iterate-com/vibe-rules": "workspace:*",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unicorn": "^61.0.2",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vibe-rules": "^0.3.91"
  },
  "packageManager": "pnpm@10.17.1"
}
