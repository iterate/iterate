{
  "name": "iterate-root",
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --reporter-hide-prefix --parallel dev",
    "build": "pnpm -r --parallel build",
    "typecheck": "pnpm -r --parallel typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "iterate": "pnpm run --silent os iterate",
    "os": "cd apps/os && pnpm",
    "os2": "cd apps/os2 && pnpm",
    "daemon": "cd apps/daemon && pnpm",
    "e2e": "WORKER_URL='http://localhost:5173' doppler run -- pnpm os e2e",
    "eval": "doppler run -- pnpm os eval",
    "eval:light": "doppler run -- env -u BRAINTRUST_API_KEY pnpm os eval",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "lint:inspect": "pnpx @eslint/config-inspector",
    "prepare": "(cd apps/os && pnpm tsdown) && (is-ci || husky)",
    "vitest": "cd apps/os && pnpm vitest",
    "test": "pnpm -r --parallel test",
    "test:onboarding": "pnpm -r --parallel test:onboarding",
    "test:onboarding:production": "pnpm -r --parallel test:onboarding:production",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down -v",
    "db:migrate": "pnpm os db:migrate",
    "db:generate": "pnpm os db:generate",
    "db:studio": "pnpm os db:studio",
    "db:studio:staging": "PSCALE_DATABASE_URL=$(doppler secrets --config stg get --plain DRIZZLE_ADMIN_POSTGRES_CONNECTION_STRING) pnpm db:studio",
    "db:studio:production": "PSCALE_DATABASE_URL=$(doppler secrets --config prd get --plain DRIZZLE_ADMIN_POSTGRES_CONNECTION_STRING) pnpm db:studio",
    "db:query": "docker exec -it postgres-iterate psql -U postgres -d iterate",
    "db:query:file": "docker exec -i postgres-iterate psql -U postgres -d iterate -f",
    "db:exec": "docker exec -i postgres-iterate psql -U postgres -d iterate -c",
    "clean": "rm -rf ./**/node_modules",
    "workflows": "cd .github/ts-workflows && pnpm generate",
    "postinstall:vibe-rules": "vibe-rules install cursor && vibe-rules install codex && vibe-rules install claude-code",
    "super-reset": "pnpm i && pnpm docker:down && pnpm docker:clean && pnpm docker:up && sleep 3 && pnpm os db:migrate",
    "super-reset2": "pnpm i && pnpm docker:down && pnpm docker:clean && pnpm docker:up && sleep 3 && pnpm os2 db:migrate",
    "postinstall": "is-ci || pnpm /postinstall:/"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@iterate-com/vibe-rules": "workspace:*",
    "@tanstack/eslint-plugin-router": "^1.139.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-plugin-codegen": "0.34.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unicorn": "github:mmkal/eslint-plugin-unicorn#4b6340834f94ebb53a1aee5b91dd5c0e103249b3",
    "esquery": "1.6.0",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vibe-rules": "^0.3.91"
  },
  "packageManager": "pnpm@10.24.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "node-pty"
    ],
    "overrides": {
      "baseline-browser-mapping": "^2.9.14"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix --max-warnings=-1"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
