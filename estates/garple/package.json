    "db:migrate": "cd apps/website && doppler run -- wrangler d1 migrations apply estate-garple-production-garple-website-d1 --local",
    "db:migrate:production": "cd apps/website && doppler run -- wrangler d1 migrations apply estate-garple-production-garple-website-d1 --remote",
