{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node", "vitest/globals", "bun-types"],
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "./**/*.d.ts"],
  "exclude": ["proof-logs", "node_modules"]
}
